<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:padding="10dp"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_loadimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:paddingTop="60dp"
        android:background="@drawable/ic_baseline_add_a_photo_24" />
    <EditText
        android:id="@+id/name_album"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:hint="Enter your name album"
        android:textSize="25dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_updateimage"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="UPLOAD"
            android:textSize="20sp"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btn_showimage"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:text="Show Album"
            android:textSize="20sp"
            android:background="@color/colorAccent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        />



